{
  "name": "poor-dev",
  "version": "1.1.0",
  "type": "module",
  "description": "AI-powered development workflow slash commands for OpenCode & Claude Code",
  "bin": {
    "poor-dev": "./bin/poor-dev.mjs",
    "poor-dev-next": "./dist/bin/poor-dev-next.js"
  },
  "files": [
    "bin/",
    "lib/",
    "dist/",
    "commands/",
    "agents/",
    "templates/",
    "benchmarks/*.sh",
    "benchmarks/*.json",
    "benchmarks/_scaffold/",
    "benchmarks/reviews/"
  ],
  "keywords": [
    "ai",
    "claude",
    "opencode",
    "development",
    "workflow",
    "slash-commands"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BaconGame4423/PoorDevSkills.git"
  },
  "scripts": {
    "prepare": "tsc",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "sync-agents": "npx tsx scripts/sync-agents.ts",
    "sync-agents:check": "npx tsx scripts/sync-agents.ts --check",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
